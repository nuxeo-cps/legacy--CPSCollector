<tal:block define="_check_perm_ doc/assert_form_private" />

<!-- def form_page -->
<html metal:define-macro="form_page">
  <head>
   <metal:block define-slot="head">
   <title tal:content="template/title">The Title</title>
   </metal:block>
  </head>
  <body> 
    <div metal:define-slot="body">
    This is where the page's body text goes.
    </div>
  </body>
</html>

<!-- def string field -->
<input metal:define-macro="string" 
       type="text" 
       tal:attributes="name f_id; 
                       size f/size|default;
                       maxlength f/maxlength|default;
                       value python:doc.getV(f_id, 'value',default)" />

<!-- def title field -->
<b metal:define-macro="title" tal:content="label|default">&nbsp;</b>
  
<!-- def hidden field -->
<input metal:define-macro="hidden"
       type="hidden"
       tal:attributes="name f_id; value f/value"
       tal:condition="f/value|nothing" />

<!-- def password field -->
<input metal:define-macro="password" 
       type="password"
       tal:attributes="name f_id;size f/size|default;
                       maxlength f/maxlength|default;
                       value python:doc.getV(f_id, 'value',default)" />

<!-- def string_ro field -->
<span metal:define-macro="string_ro" tal:omit-tag="">
  <input type="hidden"
         tal:attributes="name f_id; value python:doc.getV(f_id, 'value')" />
  <span tal:replace="python:doc.getV(f_id, 'value')" />
</span>

<!-- def text field -->
<textarea metal:define-macro="text" 
          tal:attributes="name f_id;
                          cols f/cols|default;
                          rows f/rows|default" 
          tal:content="python:doc.getV(f_id, 'value',default)"
          cols="50" rows="7"></textarea>

<!-- def checkbox field -->
<input metal:define-macro="checkbox" 
       tal:attributes="name f_id;checked python:doc.meta_type!='Quiz Document' and
                                                doc.getV(f_id,'checked')"
       name="_x_"
       type="checkbox"/>

<!-- def radio field -->
<metal:block metal:define-macro="radio">
  <tal:block tal:repeat="v python:doc.getVList(f_id)">
    <input tal:attributes="name f_id;value v;
                           checked python:doc.meta_type!='Quiz Document' and
                                          doc.getV(f_id,'checked')==v"
           name="_x_" type="radio" />
    <tal:block tal:replace="python:doc.getLabel(f_id,v)">label</tal:block>
  </tal:block>
</metal:block>

<!-- def vradio field -->
<metal:block metal:define-macro="vradio">
  <tal:block tal:repeat="v python:doc.getVList(f_id)">
    <input tal:attributes="name f_id;value v;
                           checked python:doc.meta_type!='Quiz Document' and
                                          doc.getV(f_id,'checked')==v"
           name="_x_" type="radio" />
    <tal:block tal:replace="python:doc.getLabel(f_id,v)">label</tal:block><br />
  </tal:block>
</metal:block>

<!-- def selection field -->
<metal:block metal:define-macro="selection">
  <select tal:attributes="name f_id;
                          multiple f/multiple|python:0;
                          size f/size|nothing" 
          name="_x_">
    <tal:block tal:repeat="v python:doc.getVList(f_id)">
      <option tal:attributes="value v;
                              selected python:v in doc.getV(f_id, 'value',
	                                                    '', 1)"
              tal:content="python:doc.getLabel(f_id,v)">_x_</option>
    </tal:block>
  </select>
</metal:block>

<!-- def separator field -->
<metal:block metal:define-macro="separator">
  <hr><span tal:replace="label|nothing" />
</metal:block>

<!-- def comment -->
<i metal:define-macro="comment" tal:content="label|nothing">comments</i>

<!-- def submit field -->
<metal:block metal:define-macro="submit">
  <input type="submit" tal:attributes="name f/value|default;
                                       value label|default"
         value="" class="context" />
</metal:block>

<!-- def reset field -->
<metal:block metal:define-macro="reset">
  <input type="reset" tal:attributes="name f/value|default; value label|default" 
         value=""
         class="context" />
</metal:block>

<!-- def file field -->
<input metal:define-macro="file" type="file"
       tal:attributes="name f_id; value python:doc.getV(f_id, 'value',default)"
       value="" />
    
<!-- def display label -->
<td metal:define-macro="display_label" 
    tal:condition="python:nb_slot==2"
    align="right"
    width="1%"
    nowrap>
  <font tal:attributes="color python:test(f_id in request.form.get('error__',[]),
                                          'red',
                                          0)"
        tal:content="label|default">&nbsp;</font>
  <span tal:replace="string:*" tal:condition="f/required|nothing" />
</td>

<!-- def display field -->
<td metal:define-macro="display_field"
    tal:attributes="colspan python:test(doc.span[f_id],doc.span[f_id],nothing)"
    width="1%" nowrap>
  <span metal:use-macro="python:doc.getFMacro(f_id)" />
</td>

<!-- def display_form -->
<form action="." method="post" enctype="multipart/form-data" 
      metal:define-macro="display_form">
  <table tal:condition="request/other/form_status|nothing"
         cellpadding="0" cellspacing="0" border="1" noshade width="100%">
    <tr>
      <td bgcolor="#EEEEEE">
        <font color="990000">
          <strong tal:content="request/other/form_status">error msg</strong>
        </font>
      </td>
    </tr>
  </table>
  <table>
    <tr>
      <td>
        <input type="hidden" name="is_form_submitted" value="yes" />
        <table border="0" width="100%">
          <tr tal:repeat="row doc/getRows">
            <span tal:repeat="f_id row" tal:omit-tag="">
              <span tal:define="f python:doc.fields[f_id];
                                nb_slot python:doc.getNbSlot(f_id);
                                label python:doc.getLabel(f_id)"
                                tal:omit-tag="">
                <span metal:use-macro="here/Form_macros/macros/display_label" />
                <span metal:use-macro="here/Form_macros/macros/display_field" />
              </span>
            </span>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</form>

<!-- def display_edit_form -->
<form action="." method="post" metal:define-macro="display_edit_form">
  <table border='0' style='width:80%;height:inherit'
         cellspacing='0' cellpadding='0'>
    <tr bgcolor="ffdcb7" tal:condition="request/other/form_status|nothing">
      <td colspan="5" tal:content="request/other/form_status">bla</td>
    </tr>
    <tr>
      <td colspan="5">
        <strong tal:content="python:mcat('_form_add_new_field_')">
          Add a new field:
        </strong>
      </td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td colspan="4" nowrap>Id:
        <input type="text" name="id" size="20"/>
        type:
        <select name="type" size=1>
          <option value="title" tal:content="python:mcat('_col_title_')">
            Title
          </option>
          <option value="string" selected="1"
                  tal:content="python:mcat('_col_string_')">String</option>
          <option value="string_ro"
                  tal:content="python:mcat('_col_string_ro_')">
            String read only
          </option>	  
          <option value="identifier"
                  tal:content="python:mcat('_col_identifier_')">
            Identifier
          </option>
          <option value="email"
                  tal:content="python:mcat('_col_email_')">
            e-mail
          </option>
          <option value="url"
                  tal:content="python:mcat('_col_url_')">
            URL
          </option>
          <option value="date"
                  tal:content="python:mcat('_col_date_')">Date</option>
          <option value="password"
                  tal:content="python:mcat('_col_password_')">Password</option>  	  
          <option value="int"
                  tal:content="python:mcat('_col_integer_')">Integer</option>
          <option value="float"
                  tal:content="python:mcat('_col_float_')">Float</option>
          <option value="phone"
                  tal:content="python:mcat('_col_phonenumber_')">
            Phone number
          </option>
          <option value="text"
            tal:content="python:mcat('_col_textarea_')">Text area</option>
          <option value="radio"
                  tal:content="python:mcat('_col_radiobutton_')">
            Radio button
          </option>
          <option value="vradio"
                  tal:content="python:mcat('_col_vradiobutton_')">
            Vertical Radio button
          </option>
          <option value="checkbox"
                  tal:content="python:mcat('_col_checkbox_')">
            Checkbox
          </option>
          <option value="selection"
                  tal:content="python:mcat('_col_selection_')">
            Selection
          </option>
          <option value="separator"
                  tal:content="python:mcat('_col_separator_')">
            Separator
          </option>	  
          <option value="submit"
                  tal:content="python:mcat('_col_button_')" >
            Button
          </option>
          <option value="reset" tal:content="python:mcat('_col_resetbutton_')">
            Reset button
          </option>
          <option value="hidden"
                  tal:content="python:mcat('_col_hiddenstring_')">
            Hidden string
          </option>
          <option value="comment" tal:content="python:mcat('_col_comment_')">
            Comment
          </option>
          <option value="file"
                  tal:content="python:mcat('_col_file_')">
            File
          </option>	  
        </select>
        <input type="submit" name="Form_addField:method"
               tal:attributes="value python:mcat('_form_add_new_field_')"
               class="context" />
      </td>
    </tr>
    <tr>
      <td colspan="5"><br></td>
    </tr>
    <tr>
      <td colspan="6">
        <strong tal:content="python:mcat('_form_list_of_fields_')">
          List of fields:
        </strong>
      </td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td nowrap="1">id</td>
      <td nowrap="1" tal:content="python:mcat('_form_type_')">type</td>
      <td width="50%" tal:content="python:mcat('_form_label_')">label</td>
      <td nowrap="1" tal:content="python:mcat('_form_required_')">required</td>
      <td nowrap tal:content="python:mcat('_form_join_')">join w/ next field</td>
    </tr>
    <tr tal:repeat="f_id doc/getFList"
        tal:attributes="class python:test(repeat['f_id'].odd(),'odd','even')">
      <tal:block tal:define="f python:doc.fields[f_id];
                        label python:doc.getLabel(f_id)">
        <td width="10">
          <input tal:attributes="value f_id;
                                 checked python:doc.isSelected('f_id',f_id)"
                 name="f_id" type="checkbox" />
        </td>
        <td>
          <a tal:attributes="href string:Form_editField?f_id=$f_id"
             tal:content="f_id">&nbsp;</a>
        </td>
        <td tal:content="f/type|default">&nbsp;</td>
        <td tal:content="label|default">&nbsp;</td>
        <td tal:content="f/required|default">&nbsp;</td>
        <td tal:content="f/join|default">&nbsp;</td>    
      </tal:block>
    </tr>
    <tr colspan="5">
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td colspan="4">
        <input type="submit" name="Form_moveFieldUp:method"
               tal:attributes="value python:mcat('_form_bt_move_up_')"
               class="context" />
        <input type="submit" name="Form_moveFieldDown:method"
               tal:attributes="value python:mcat('_form_bt_move_down_')"
               class="context" />
        <input type="submit" name="Form_delField:method"
               tal:attributes="value python:mcat('_form_bt_remove_');
                               onClick 
                                 python:
                                   'return window.confirm(\'%s\')' % (mcat('_Are_you_sure?_'),)"
               class="destructive"/>
      </td>
    </tr>
  </table>
</form>

